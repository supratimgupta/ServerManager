<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <appSettings>
      <add key="BASE_ADDRESS_API" value="http://localhost:46962/"/>
      <add key="BASE_DOMAIN_WCF" value="localhost"/>
      <add key="BASE_PORT_WCF" value="46963"/>
    </appSettings>
    <system.serviceModel>
        <serviceHostingEnvironment multipleSiteBindingsEnabled="true">
        </serviceHostingEnvironment>
        <behaviors>
            <serviceBehaviors>
                <behavior name="conterollerBehav">
                    <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
                    <serviceDebug includeExceptionDetailInFaults="true" />
                </behavior>
            </serviceBehaviors>
        </behaviors>
        <services>
            <service name="GSM.Tools.RemoteController.RemoteProcSvc" behaviorConfiguration="conterollerBehav">
                <endpoint address="" binding="basicHttpBinding" contract="GSM.Common.Contracts.IRemoteProcSvc">
                    <identity>
                        <dns value="localhost" />
                    </identity>
                </endpoint>
                <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
                <host>
                    <baseAddresses>
                        <add baseAddress="http://localhost:46963/Controller" />
                    </baseAddresses>
                </host>
            </service>
        </services>
    </system.serviceModel>
</configuration>